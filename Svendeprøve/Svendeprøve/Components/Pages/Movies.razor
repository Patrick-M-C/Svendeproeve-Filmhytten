@page "/movies"
@using Svendeprøve.Components.Models
@using Svendeprøve.Components.Services
@inject MovieService MovieService
@inject NavigationManager NavigationManager

<div class="row row-cols-1 row-cols-md-6 g-3">
    @foreach (var item in movies)
    {
        <div class="col-sm-5">
            <div class="card h-50 w-75">
                <img src="@item.poster_path" class="card-img-top" @onclick="() => ShowPopup(item.Id)" />
                <div class="card-body">
                    <div class="card-title">
                        <h5>@item.Title</h5>
                        <h6>Release Date </h6>
                        <h6>@item.release_date</h6>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@if (popup)
{
    <div class="overlaypopup">
        <div class="popup">
            <h2 class="popupTitle">@movieData.Title</h2>
            <div class="gridWrapperPopup">
                <img class="popupImg" src="@movieData.poster_path" />
                <div class="popupDesc">
                    Udkom i år: @movieData.release_date
                    <br /> Filmen er @movieData.Runtime Minutter Lang.
                    <button class="popupBut" @onclick="BuyTicket">Køb Billet</button>
                </div>
                <a class="close" @onclick="() => popup = false">×</a>
            </div>
        </div>
    </div>
}

@code {
    private List<Movie> movies = new();
    private Movie? movieData;
    private bool popup = false;
    private string? errorMessage;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            movies = await MovieService.GetMoviesAsync();
        }
        catch (HttpRequestException ex)
        {
            errorMessage = $"Kunne ikke hente film: {ex.Message}";
            Console.WriteLine(errorMessage);
            movies = new List<Movie>();
        }
        catch (Exception ex)
        {
            errorMessage = $"Uventet fejl: {ex.Message}";
            Console.WriteLine(errorMessage);
            movies = new List<Movie>();
        }
    }

    private async Task ShowPopup(int movieId)
    {
        movieData = await MovieService.GetMovieByIdAsync(movieId);
        popup = true;
    }

    private void BuyTicket()
    {
        // Eksempel: Naviger til en købsside eller hall-valg
        if (movieData != null)
        {
            NavigationManager.NavigateTo($"/hall?movieId={movieData.Id}");
        }
        popup = false; // Luk popup efter klik
    }
}

